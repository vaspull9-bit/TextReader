<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TextReader" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <!-- EditText styling -->
        <item name="editTextStyle">@style/Widget.TextReader.EditText</item>

        <!-- Button styling -->
        <item name="materialButtonStyle">@style/Widget.TextReader.Button</item>

        <!-- Toolbar styling -->
        <item name="toolbarStyle">@style/Widget.TextReader.Toolbar</item>
    </style>

    <style name="Theme.TextReader" parent="Base.Theme.TextReader">
        <!-- For API level 29+ -->
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <!-- Custom EditText style -->
    <style name="Widget.TextReader.EditText" parent="android:Widget.EditText">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textColorHint">@color/gray_600</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- ... остальные стили ... -->
</resources>