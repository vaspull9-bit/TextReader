<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TextReader" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <!-- EditText styling -->
        <item name="editTextStyle">@style/Widget.TextReader.EditText</item>

        <!-- Button styling -->
        <item name="materialButtonStyle">@style/Widget.TextReader.Button</item>

        <!-- Toolbar styling -->
        <item name="toolbarStyle">@style/Widget.TextReader.Toolbar</item>

        <!-- CardView styling -->
        <item name="cardViewStyle">@style/CardView.TextReader</item>
    </style>

    <style name="Theme.TextReader" parent="Base.Theme.TextReader">
        <!-- For API level 29+ -->
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="Theme.TextReader.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Theme.TextReader.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Custom EditText style -->
    <style name="Widget.TextReader.EditText" parent="android:Widget.EditText">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textColorHint">@color/gray_600</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Custom Button style -->
    <style name="Widget.TextReader.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Custom Toolbar style -->
    <style name="Widget.TextReader.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.TextReader.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.TextReader.Toolbar.Subtitle</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Toolbar title text appearance -->
    <style name="TextAppearance.TextReader.Toolbar.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Toolbar subtitle text appearance -->
    <style name="TextAppearance.TextReader.Toolbar.Subtitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- CardView style -->
    <style name="CardView.TextReader" parent="CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <!-- FloatingActionButton style -->
    <style name="Widget.TextReader.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="icon">@drawable/ic_add</item>
        <item name="contentDescription">@string/add_note</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="elevation">8dp</item>
<!--        <item name="size">normal</item>-->
        <item name="shapeAppearance">?attr/shapeAppearanceMediumComponent</item>
    </style>

    <!-- TextFormattingBar style -->
    <style name="Widget.TextReader.TextFormattingBar" parent="android:Widget">
        <item name="android:background">?attr/colorPrimarySurface</item>
        <item name="android:padding">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Note item style -->
    <style name="Widget.TextReader.NoteItem" parent="android:Widget">
        <item name="android:background">@drawable/bg_note_item</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Progress dialog style -->
    <style name="TextReader.ProgressDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
</resources>